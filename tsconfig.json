  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "lib": ["dom", "ES2015"],
    "strict": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "declarations.d.ts"
  ],
  "exclude": ["node_modules"]
}